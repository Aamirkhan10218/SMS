@model SMS.Areas.Dashboard.ViewModels.TeacherActionModel
@if (Model.ID > 0 && Model!=null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Create New Teacher</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="frmEdit">
                <div>
                    <input type="hidden" name="classID" value="@Model.ID" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"> Teacher Name</label>
                    <input class="form-control" name="Name" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Name" placeholder="Enter Student">
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button id="btnSave" type="button" class="btn btn-primary"><i class="fas fa-save mr-1"></i>Save changes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Close</button>
        </div>
    </div> 
}
<script>
    $("#btnSave").click(function () {
        $.ajax({
            url: '@Url.Action("Edit","Teachers")',
            data: $("#frmEdit").serialize(),
            type: "Post"
        })
            .done(function (response) {
                location.reload();
            });
    });

</script>