@model SMS.Areas.Dashboard.ViewModels.TeacherListingModel
@if (Model != null && Model.Teachers.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mc in Model.Teachers)
            {
                <tr>

                    <td>
                        @mc.Name
                    </td>
                    <td>
                        <button data-href="@Url.Action("Edit","Teachers",new { ID=mc.ID})" class="data-btn btn btn-primary" data-toggle="modal" data-target="#exampleModal"><i class="fas fa-edit mr-1"></i> Edit</button>
                        <button data-href="@Url.Action("Delete","Teachers",new {ID=mc.ID })" class="data-btn btn btn-danger" data-toggle="modal"data-target="#exampleModal" ><i class="fas fa-trash mr-1"></i> Delete</button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        There is No Teachers Record Exists...!
    </div>
}
<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
        })
            .done(function (response) {
                $("#exampleModal .modal-dialog").html(response);
            });


    });
</script>
