
@*make here new design*@
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - Student Manager</title>
    <link href="~/Areas/Dashboard/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Dashboard/Content/css/simple-sidebar.css" rel="stylesheet" />
    <script src="~/Areas/Dashboard/Content/vendor/jquery/jquery.min.js"></script>
</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">SMS</div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index","Dashboard")" class="list-group-item list-group-item-action bg-light">
                Dashboard
                </a>
                <a href="@Url.Action("Index","Students")" class="list-group-item list-group-item-action bg-light">
                Students
                </a>
                <a href="@Url.Action("Index","Teachers")" class="list-group-item list-group-item-action bg-light">
                Teachers
                </a>
                <a href="@Url.Action("Index","Classes")" class="list-group-item list-group-item-action bg-light">
                Classes
                </a>
                <a href="@Url.Action("Index","Reports")" class="list-group-item list-group-item-action bg-light">Reports</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Logout <span class="sr-only">(current)</span></a>
                        </li>
                        
                       
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
  
    <script src="~/Areas/Dashboard/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>

</html>
