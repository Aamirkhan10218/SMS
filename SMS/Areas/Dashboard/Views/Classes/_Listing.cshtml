
@model SMS.Areas.Dashboard.ViewModels.ClassListingModel
@if(@Model!= null && Model.Classes.Count()>0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
         
              @foreach (var mc in Model.Classes)
              {
                <tr>
                    
                    <td>
                        @mc.ClassName
                    </td>
                    <td>
                        <button data-href="@Url.Action("Action","Classes",new {ID=mc.ClassID })" type="button" class="data-btn btn btn-primary" data-toggle="modal" data-target="#actionModal"><i class="fas fa-edit mr-1"></i>Edit</button>
                        <button data-href="@Url.Action("Delete","Classes",new {ID=mc.ClassID })" type="button" class="data-btn btn btn-danger" data-toggle="modal" data-target="#actionModal"><i class="fas fa-trash mr-1"></i>Delete</button>
                      
                   
                    </td>
                </tr>
              }
         
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        There is no Record Exxists...!
    </div>
}
<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
        })
            .done(function (response) {
                 $("#actionModal .modal-dialog").html(response);
            });


    });


</script>