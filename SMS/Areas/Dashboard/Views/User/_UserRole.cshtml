@model SMS.Areas.Dashboard.ViewModels.UserRoleModel
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">User Roles</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <h5>Current User Roles</h5>
        @if (Model.UserRoles != null && Model.UserRoles.Count() > 0)
        {
            <table class="table">

                <thead>
                    <tr>
                        <th colspan="2">
                            Current User Roles
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model.UserRoles)
                    {
                        <tr>
                            <td>
                                @role.Name
                            </td>
                            <td>
                                <button id="btnDelete" type="button" class="btn btn-danger"><i class="fas fa-save mr-1"></i>Delete</button>
                            </td>
                        </tr>
                     }
                </tbody>


            </table>
          }
         else
         {
             <div class="alert alert-warning" role="alert">
                 This User Has Currently No Role.
             </div>
          }

    <table class="table">
        <thead>
            <tr>
                <th colspan="2">
                    Assign New Roles
                </th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
                            {
            <tr>
                <td>
                    @role.Name
                </td>
                <td>
                    <button id="btnAction" type="button" class="btn btn-success"><i class="fas fa-save mr-1"></i>Assign</button>
                </td>
            </tr>
                            }
        </tbody>
    </table>


    </div>
    <div class="modal-footer">
        <button id="btnAction" type="button" class="btn btn-primary"><i class="fas fa-save mr-1"></i>Save changes</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal"> <i class="fas fa-times mr-1"></i>Close</button>
    </div>
</div>

<!--JQUERY FOR SAVE BUTTON-->
<script>
       $("#btnAction").click(function () {
           $.ajax({
               url: '@Url.Action("Action","User")',
               data: $("#frmAction").serialize(),
               type: "post"
           })
               .done(function (response) {

                   location.reload();
               });
       });


</script>


