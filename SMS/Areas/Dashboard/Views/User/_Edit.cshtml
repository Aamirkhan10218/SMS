@model SMS.Areas.Dashboard.ViewModels.UserActionModel

@if (!string.IsNullOrEmpty(Model.ID))
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Edit User</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="frmEdit">
                <div>
                    <input type="hidden" name="ID" value="@Model.ID" />
                </div>
                <div class="form-group">
                    <label>User Name</label>
                    <input class="form-control" name="UserName" value="@Model.UserName">
                </div>
                <div class="form-group">
                    <label>Full Name</label>
                    <input class="form-control" name="FullName" value="@Model.FullName">
                </div>
                <div class="form-group">
                    <label>Email Address</label>
                    <input class="form-control" name="Email" value="@Model.Email">
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    <input class="form-control" name="Phone" value="@Model.Phone">
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input class="form-control" name="Address" value="@Model.Address">
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button id="btnSave" type="button" class="btn btn-primary"><i class="fas fa-save mr-1"></i>Save changes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Close</button>
        </div>
    </div>
}

<!--JQUERY FOR SAVE BUTTON-->
<script>
       $("#btnSave").click(function () {
           $.ajax({
               url: '@Url.Action("Edit","User")',
               data: $("#frmEdit").serialize(),
               type: "post"
           })
           .done(function (response) {

               location.reload();
           });
       });


</script>



