@model SMS.Areas.Dashboard.ViewModels.UserActionModel


    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Create New User</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="frmAction">

                <div class="form-group">
                    <label for="exampleInputEmail1">User Name</label>
                    <input class="form-control" name="UserName" placeholder="Enter User Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Email </label>
                    <input class="form-control" name="Email" placeholder="Enter Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Full Name</label>
                    <input class="form-control" name="FullName" placeholder="Enter Full Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Phone Number</label>
                    <input class="form-control" name="Phone" placeholder="Enter Cell Phone Number">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Address</label>
                    <textarea class="form-control" name="Address" placeholder="Enter Your Address"></textarea>
                </div>
            </form>

        </div>
        <div class="modal-footer">
            <button id="btnAction" type="button" class="btn btn-primary"><i class="fas fa-save mr-1"></i>Save changes</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal"> <i class="fas fa-times mr-1"></i>Close</button>
        </div>
    </div>

<!--JQUERY FOR SAVE BUTTON-->
<script>
       $("#btnAction").click(function () {
           $.ajax({
               url: '@Url.Action("Action","User")',
               data: $("#frmAction").serialize(),
               type: "post"
           })
               .done(function (response) {

                   location.reload();
               });
       });


</script>


